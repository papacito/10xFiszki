---
import Layout from "../../layouts/Layout.astro";
import FlashcardCreateForm from "../../components/flashcards/FlashcardCreateForm";
---

<Layout title="Create Flashcard">
  <main class="min-h-screen bg-slate-50 text-slate-900">
    <div class="mx-auto flex max-w-3xl flex-col px-6 py-12">
      <header>
        <p class="text-sm font-semibold uppercase tracking-wide text-slate-500">
          Manual creation
        </p>
        <h1 class="mt-2 text-3xl font-semibold text-slate-900">
          Add a new flashcard
        </h1>
        <p class="mt-2 text-base text-slate-600">
          Keep the prompt and answer concise for faster reviews.
        </p>
      </header>
      <FlashcardCreateForm client:load />
    </div>
  </main>
</Layout>
